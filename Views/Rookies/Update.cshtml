@model mvc.Models.PersonModifierModel;
@{
    ViewData["Title"] = "Update person";
}
<div class="container">
    <div class="row">
       @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label>First Name</label>
                <div class="col-lg-10">
                    <input class="form-control text-box single-line" id="FirstName" name="FirstName" type="text" value="@Model.FirstName">
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
                <label>Last Name</label>
                <div class="col-lg-10">
                    <input class="form-control text-box single-line" id="LastName" name="LastName" type="text" value="@Model.LastName">
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
                <label>Gender</label>
                <div class="col-lg-10">
                    <input class="form-control text-box single-line" id="Gender" name="Gender" type="text" value="@Model.Gender">
                    @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger", @Value = Model.Gender})
                </div>
                <label>Date Of Birth</label>
                <div class="col-lg-10">
                    @Html.EditorFor(m => m.DateOfBirth, new { htmlAttributes = new { @class = "form-control", @Value = Model.DateOfBirth, @type="date" } })
                </div>
                <label>Phone Number</label>
                <div class="col-lg-10">
                    <input class="form-control text-box single-line" id="PhoneNumber" name="PhoneNumber" type="text" value="@Model.PhoneNumber">
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger", @Value = Model.PhoneNumber })
                </div>
                <label>Is Graduated</label>
                <div class="col-lg-10">
                    <input class="form-control form-check-input" type="checkbox" id="IsGraduated" name="IsGraduated" @(Model.IsGraduated== true?"checked":"")>
                </div>
            </div>
            <br />

            <p>
                <button type="submit" class="btn btn-success">Submit</button>
            </p>
        }
    </div>
</div>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
